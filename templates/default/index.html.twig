  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6 thumbnail-wrapper">
          <a href="#artistique" class="thumbnail img-hover">
            <img src="{{ asset('/img/casquettes/thumbs/04_motherboard_thumb.png') }}" alt="Circuits électroniques casquette">
