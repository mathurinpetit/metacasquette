{% extends 'base.html.twig' %}
{% block body %}
{% set id = "%04d"|format(metacasquette['Numero']) %}
<div class="container mobile-container ">
    <div class="row">
      <div class="col-xs-12 col-sm-12" style="padding-right: 0px; padding-left: 0px;" >
        <div class="well-mobile">
          <h3 class="leadmobile" >
            Modèle {{ id }} - {{ metacasquette['Code'] }}
          </h3>
          <hr/>
          <br/>

    {{ form_start(form) }}

    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="text-danger">
            {{ form_errors(form) }}
        </div>
      </div>

    <div class="col-xs-8 col-xs-offset-2">
      <div class="row">
        <div class="col-xs-6">
          <div class="input-group">
            <span class="input-group-addon" id="numero-addon">Numéro</span>
              {{ form_widget(form.Numero, {'attr': {'class': 'form-control', 'placeholder' : "Numéro de la casquette", 'aria-describedby' : "numero-addon"}}) }}
          </div>
        </div>
        <div class="col-xs-6">
          <div class="input-group">
            <span class="input-group-addon" id="code-addon">Code</span>
              {{ form_widget(form.Code, {'attr': {'class': 'form-control', 'placeholder' : "Code de la casquette", 'aria-describedby' : "code-addon"}}) }}
          </div>
        </div>
      </div>
      <br/>
      <div class="form-group">
          <label for="Description">Description:</label>
            {{ form_widget(form.Description, {'attr': {'class': 'form-control', 'placeholder' : "Description de la casquette"}}) }}
      </div>
    </div>

    </div>

    {{ form_end(form) }}
    </div>
</div>
</div>
</div>
{% endblock %}
