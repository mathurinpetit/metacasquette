{% extends 'base.html.twig' %}
{% block body %}
<div class="container" style="width:auto;">
    <div class="row">
      <div class="col-xs-12 col-sm-12" style="padding-right: 0px; padding-left: 0px;" >
        <div class="well-mobile">
            <div class="row">
            <div class="col-xs-8 col-sm-8">
              <h3 class="leadmobile" >
                Liste des modèles /META CASQUETTE
              </h3>
            </div>
            <div class="col-xs-4 col-sm-4">
              <br/>
              <a href="{{ path('adminAdd') }}" class="btn btn-default">Ajouter une MétaCasquette</a>
            </div>
          </div>
         <hr/>
         <br/>

        </div>
      </div>
    </div>
    <div class="row table-responsive-sm">
      <table class="table table-dark">
        <thead>
            <tr>
            {% for headCell in metacasquettes | first | keys %}
                {% if headCell != "photos" %}
                  <th scope="col">{{ headCell }}</th>
                {% endif %}
            {% endfor %}
            </tr>
        </thead>
        <tbody>
        {% for metacasquette in metacasquettes %}

              {% set id = "%04d"|format(metacasquette['Numero']|replace({'#': ""})) %}
                <tr data-href="{{ path('adminEdit', {'id' : id}) }}" class="{% if not metacasquette["photos"] %}danger{% elseif not metacasquette["NumeroLogo"] %}warning{% endif %}">
                  {% for key,metacasquetteCell in metacasquette %}
                    {% if loop.first %}
                        <th scope="row">{{ metacasquetteCell }}</th>
                      {% elseif key != "photos" %}
                        <td>{{ metacasquetteCell }}</td>
                    {% endif %}
                  {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

</div>
{% endblock %}
